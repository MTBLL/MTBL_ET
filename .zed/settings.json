{
  "lsp": {
    "pyright": {
      "settings": {
        "python.pythonPath": ".venv/bin/python",
        "python.venvPath": ".",
        "python.analysis.extraPaths": [".venv/lib/python3.13/site-packages"]
      }
    }
  },
  "languages": {
    "Python": {
      "format_on_save": "off",
      "formatter": {
        "external": {
          "command": ".venv/bin/python",
          "arguments": ["-m", "black", "-"]
        }
      }
    }
  }
}
